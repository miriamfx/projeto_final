<Button>:
    color: 1,1,1,1
    font_size: 17
    size_hint: .2, .1

FloatLayout:
    orientation: 'horizontal'
    canvas:
        Color:
            rgb: [.255, .255, .255]
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "IP : "
        font_size: 20
        color: 1,1,1,1
        pos_hint: {'x': .27, 'top': .97}
        size_hint: .2, .1
    TextInput:
        id: textinput_ip
        text: ''
        pos_hint: {'x': .4, 'top': .97}
        font_size: 12
        size_hint: .4, .1
    Label:
        text: "Community : "
        font_size: 20
        color: 1,1,1,1
        pos_hint: {'x': .18, 'top': .85}
        size_hint: .2, .1
    TextInput:
        id: textinput_community
        text: ''
        pos_hint: {'x': .4, 'top': .85}
        font_size: 12
        size_hint: .4, .1
	Button:
        text: app.h
        pos_hint: {'x': .4, 'top': .73}
        on_press:app.get_values_form(textinput_ip.text, textinput_community.text)
        id: btn_start
    Label:
        text: "Resultado : "
        font_size: 20
        color: 1,1,1,1
        pos_hint: {'x': .18, 'top': .65}
        size_hint: .2, .1
    TextInput:
        id: textinput_resultado
        text: ''
        pos_hint: {'x': .18, 'top': .53}
        font_size: 12
        size_hint: .65, .45
